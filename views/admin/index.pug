extends ../layouts/admin
block content

    main
    .container-fluid
        h1.mt-4 Trang chủ
        ol.breadcrumb.mb-4
            li.breadcrumb-item.active 
                a(href="/") Admin
        .row
            .col-xl-3.col-md-6
                .card.bg-primary.text-white.mb-4
                    .card-body
                        span Cây trồng 
                        span(style="padding-left: 110px")
                        span 30
                    .card-footer.d-flex.align-items-center.justify-content-between
                        a.small.text-white.stretched-link(href='#') Chi tiết
                        .small.text-white
                            i.fas.fa-angle-right 
            .col-xl-3.col-md-6
                .card.bg-warning.text-white.mb-4
                    .card-body
                        span Phân loại
                        span(style="padding-left: 110px")
                        span 60
                    .card-footer.d-flex.align-items-center.justify-content-between
                        a.small.text-white.stretched-link(href='#') Chi tiết
                        .small.text-white
                            i.fas.fa-angle-right
            .col-xl-3.col-md-6
                .card.bg-success.text-white.mb-4
                    .card-body
                        span Giống cây
                        span(style="padding-left: 110px")
                        span 956
                    .card-footer.d-flex.align-items-center.justify-content-between
                        a.small.text-white.stretched-link(href='#') Chi tiết
                        .small.text-white
                            i.fas.fa-angle-right
            .col-xl-3.col-md-6
                .card.bg-danger.text-white.mb-4
                    .card-body
                        span Tài khoản 
                        span(style="padding-left: 110px")
                        span 30
                    .card-footer.d-flex.align-items-center.justify-content-between
                        a.small.text-white.stretched-link(href='#') Chi tiết
                        .small.text-white
                            i.fas.fa-angle-right
        .row
            .col-xl-6
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-area.mr-1
                        span Area Chart Example
                    .card-body
                        canvas#myAreaChart(width='100%', height='40')
            .col-xl-6
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-bar.mr-1
                        span Bar Chart Example
                    .card-body
                        canvas#myBarChart(width='100%', height='40')
